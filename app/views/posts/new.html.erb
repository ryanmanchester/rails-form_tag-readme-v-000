<h3>Post Form</h3>

<form action="<%= posts_path %>" method="post">
  <label>Post Title</label><br>
  <input type="text" id="post_title" name="post[title]"></input><br>

  <label>Post Description</label><br>
  <input type="text" id="post_description" name="post[description]"></input><br>
  
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Submit Post"></input>

</form>

<%= params.inspect %>
